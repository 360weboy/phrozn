<?xml version="1.0"?>
<project name="site" default="help">
    <resolvepath propertyName="paths.base" file="./../../../../" />
    <resolvepath propertyName="paths.pwd" file="." />
    <target name="help">
        <echo msg="Type 'phrozn site -h' to see available options" />
    </target>
    <target name="create">
        <echo msg="Creating new Phrozn site" />
        <echo msg="${paths.base}" />
        <if>
            <or>
                <not><isset property="args.directory" /> </not>
                <equals arg1="${args.directory}" arg2="" />
            </or>
            <then>
                <echo msg="Destination directory not specified. Assuming current directory.." />
                <property name="args.directory" value="${paths.pwd}" override="true"/>
                <echo >${args.directory}</echo>
            </then>
        </if>
        <echo>${args.directory}</echo>
    </target>
</project>
